# Development Environment Configuration for Local Testing
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Disable Supabase for local development (will use mock/fallback)
USE_SUPABASE_STORAGE=false
USE_LOCAL_STORAGE=true

# Mock Supabase values (will not be called due to lazy initialization)
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=mock_anon_key
SUPABASE_SERVICE_KEY=mock_service_key

# Local file storage
FILE_STORAGE_PATH=./storage
MAX_FILE_SIZE_MB=100

# Development APIs (can be mocked)
NOAA_API_BASE_URL=https://api.weather.gov
OPENCAGE_API_KEY=mock_api_key

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=true

# Development mode settings
MOCK_EXTERNAL_APIS=true
ENABLE_HOT_RELOAD=true
