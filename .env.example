# Environment Variables for roof-sow-genesis
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Claude API Configuration (Optional - for standalone operation)
CLAUDE_API_KEY=sk-ant-api03-your_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/roof_sow_genesis

# System Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# Self-Healing System Settings
FIX_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=0.85
MAX_AUTO_FIXES=3
MAX_REGENERATION_ATTEMPTS=5

# File System Paths
BACKUP_DIR=./backups
QUARANTINE_DIR=./error-quarantine
OUTPUT_DIR=./output
LOGS_DIR=./logs

# Feature Flags
ENABLE_SUPABASE_LOGGING=true
ENABLE_AUTO_BACKUP=true
ENABLE_AUTO_QUARANTINE=true
ENABLE_REGRESSION_TESTS=true
ENABLE_PERFORMANCE_TRACKING=true

# External API Configuration
NOAA_API_KEY=your_noaa_api_key_here
OPENCAGE_API_KEY=your_opencage_api_key_here

# Security Settings
RATE_LIMIT_ENABLED=false
MAX_REQUESTS_PER_MINUTE=60
VALIDATE_INPUTS=true

# Development Settings
DEBUG_LOGGING=false
PRESERVE_INTERMEDIATE_FILES=false
MOCK_EXTERNAL_APIS=false
VERBOSE_ERROR_MESSAGES=true

# Performance Limits
MAX_FILE_SIZE_MB=50
MAX_CONCURRENT_OPERATIONS=3
MAX_MEMORY_USAGE_MB=512
OPERATION_TIMEOUT_MS=300000

# Testing Configuration
RUN_TESTS_ON_FIX=true
LAYOUT_COMPARISON_THRESHOLD=0.85
MAX_TEST_DURATION_MS=60000

# Monitoring Configuration
ENABLE_ERROR_TRACKING=true
MAX_LOG_FILE_SIZE_MB=10
MAX_LOG_FILES=5
CLEANUP_OLD_LOGS_DAYS=90
