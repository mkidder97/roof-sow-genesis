{
  "name": "roof-sow-genesis",
  "private": true,
  "version": "1.0.0",
  "description": "Self-healing PDF generation system for SOW documents with intelligent fix application and testing",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:client",
    "dev:client": "npm run dev --workspace=packages/web-client",
    "dev:server": "npm run dev --workspace=packages/api-server",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=packages/web-client",
    "build:server": "npm run build --workspace=packages/api-server",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "install:all": "npm install"
  },
  "keywords": [
    "pdf-generation",
    "self-healing",
    "construction",
    "sow",
    "wind-loads",
    "asce",
    "roof-systems",
    "monorepo"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mkidder97/roof-sow-genesis.git"
  },
  "bugs": {
    "url": "https://github.com/mkidder97/roof-sow-genesis/issues"
  },
  "homepage": "https://github.com/mkidder97/roof-sow-genesis#readme",
  "author": "mkidder97",
  "license": "MIT"
}
