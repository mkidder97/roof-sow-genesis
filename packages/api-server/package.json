{
  "name": "@roof-sow-genesis/api-server",
  "private": true,
  "version": "11.0.0",
  "description": "Express.js API server for roof SOW generation with manufacturer scraping and wind analysis",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:production": "tsx watch src/index-production.ts",
    "dev:enhanced": "tsx watch src/index-enhanced.ts",
    "dev:professional": "tsx watch src/index-professional.ts",
    "start": "tsx src/index-production.ts",
    "build": "tsc",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:health": "curl http://localhost:3001/health",
    "test:sow": "curl -X POST http://localhost:3001/api/sow/generate -H \"Content-Type: application/json\" -d '{\"projectData\":{\"projectName\":\"Test Project\",\"projectAddress\":\"Orlando, FL\"}}'",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "pdfkit": "^0.13.0",
    "@supabase/supabase-js": "^2.39.3",
    "puppeteer": "^22.15.0",
    "cheerio": "^1.0.0-rc.12",
    "sharp": "^0.33.2",
    "exifreader": "^4.21.0",
    "uuid": "^9.0.1",
    "mime-types": "^2.1.35",
    "file-type": "^19.0.0",
    "socket.io": "^4.7.5",
    "nodemailer": "^6.9.8",
    "jsonwebtoken": "^9.0.2",
    "rate-limiter-flexible": "^4.0.1",
    "joi": "^17.11.0",
    "pdf-parse": "^1.1.1",
    "tesseract.js": "^5.0.4",
    "xlsx": "^0.18.5",
    "papaparse": "^5.4.1",
    "canvas": "^2.11.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.5",
    "@types/pdfkit": "^0.12.9",
    "@types/uuid": "^9.0.7",
    "@types/mime-types": "^2.1.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/nodemailer": "^6.4.14",
    "@types/papaparse": "^5.3.14",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
